{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [ "es6" ],
        "rootDir": "src",
        "outDir": "out",
        "baseUrl": "node_modules",

        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "out/@types",
        "importHelpers": true,
        "noEmitOnError": false,
        "incremental": true,
        "removeComments": true,

        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "downlevelIteration": true,

        "typeRoots": [
            "./node_modules/@types/",
        ],
        "types": []
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "src/webview",
    ],
    "references": []
}
