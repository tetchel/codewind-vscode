{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "lib": [ "es6" ],
        "rootDir": "src",
        "outDir": "out",
        "baseUrl": "node_modules",

        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "noEmitOnError": true,
        "incremental": true,
        "removeComments": true,

        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "downlevelIteration": true,

        "typeRoots": [
            "node_modules/@types/",
            "src/webview"
        ],
        "types": [
        ]
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "src/webview",
        // "src/test/"
    ],
    "references": [
        { "path": "tsconfig.webview.json" }
    ]
}
