// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ts-watch-extension",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "presentation": {
                // "revealProblems": "onProblem",
                "reveal": "always",
                "echo": true,
                "panel": "dedicated",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "folderOpen"
            }
        },
        {
            "type": "npm",
            "script": "webpack-watch-webviews",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // "revealProblems": "onProblem",
                "reveal": "always",
                "echo": true,
                "panel": "dedicated",
                "clear": true
            },
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "folderOpen"
            },
            "problemMatcher": [
                {
                    "fileLocation": "relative",
                    "pattern": [
                        {
                            "regexp": "\\[at-loader\\] ([^:]*):(\\d+):(\\d+)\n(.*)",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4

                        },
                        {
                            "regexp": "ERROR in \\[at-loader\\] ([^:]*):(\\d+):(\\d+)\n(.*)",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "message": 4
                        }
                    ],
                    "severity": "warning",
                    "source": "typescript",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "webpack is watching the filesâ€¦"
                        },
                        "endsPattern": {
                            "regexp": "### Webpack finished compiling.*"
                        }
                    }
                }
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf out/ dist/ *.tsbuildinfo",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        /*
        {
            "label": "watch-all",
            "dependsOn": [
                "ts-watch-extension",
                "npm: webpack-watch-webviews"
            ],
            "dependsOrder": "parallel",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "folderOpen"
            },
        }*/
    ]
}
