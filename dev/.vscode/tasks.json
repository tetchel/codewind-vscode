// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ts-watch-extension",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "presentation": {
                "reveal": "always",
                "echo": true,
                "panel": "dedicated",
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "folderOpen"
            }
        },
        {
            "label": "ts-watch-webviews",
            "type": "typescript",
            "tsconfig": "tsconfig.webview.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "presentation": {
                "reveal": "always",
                "echo": true,
                "panel": "dedicated",
                "clear": true
            },
            "group": "build",
            "runOptions": {
                "instanceLimit": 1,
            }
        },
        {
            "type": "npm",
            "script": "webpack-watch-webviews",
            "isBackground": true,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "echo": true,
                "panel": "dedicated",
                "clear": true
            },
            "runOptions": {
                "instanceLimit": 1,
                "runOn": "folderOpen"
            },
            "problemMatcher": [ "$ts-webpack-watch" ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf out/ dist/ out-webview/ *.tsbuildinfo",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "type": "npm",
            "script": "webpack-webviews",
            "problemMatcher": [
                "$ts-webpack"
            ],
            "label": "npm: webpack-webviews"
        }
    ]
}
